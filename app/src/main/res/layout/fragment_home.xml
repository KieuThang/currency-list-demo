<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.HomeFragment">

    <com.hometest.currencylistdemo.presentation.widgets.OpenSansRegularTextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/margin_big"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_application"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/tv_welcome_margin_top"
        android:textSize="@dimen/tvSizeHeader" />

    <com.hometest.currencylistdemo.presentation.widgets.OpenSansRegularButton
        android:id="@+id/btnLoadData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_grey"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:paddingHorizontal="@dimen/margin_big"
        android:paddingVertical="@dimen/margin_medium"
        android:src="?attr/selectableItemBackground"
        android:text="@string/load_data"
        android:textColor="@android:color/white"
        android:textSize="@dimen/tvSizeHeader" />
</RelativeLayout>
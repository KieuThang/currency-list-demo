<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CurrencyListFragment">

    <fragment
        android:id="@+id/CurrencyListFragment"
        android:name="com.hometest.currencylistdemo.presentation.main.CurrencyListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_currency_list">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/DetailCurrencyFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailCurrencyFragment"
        android:name="com.hometest.currencylistdemo.presentation.main.CurrencyDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/CurrencyListFragment" />
    </fragment>
</navigation>